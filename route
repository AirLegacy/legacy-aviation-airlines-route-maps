<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Airline Route Map</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css"/>
  <style>
    #map { height: 100vh; width: 100%; }
    .hub-marker { background-color: yellow; border-radius: 50%; width: 16px; height: 16px; display: block; border: 2px solid #333; }
    .airport-marker { background-color: blue; border-radius: 50%; width: 12px; height: 12px; display: block; border: 2px solid #333; }
  </style>
</head>
<body>
  <div id="map"></div>
  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    const map = L.map('map').setView([53.3498, -6.2603], 5); // Centered on Dublin

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    const dublin = [53.3498, -6.2603];
    const london = [51.5074, -0.1278];
    const paris = [48.8566, 2.3522];
    const munich = [48.1351, 11.5820];

    const destinations = [
      { name: 'London', coords: london },
      { name: 'Paris', coords: paris },
      { name: 'Munich', coords: munich }
    ];

    // Hub marker
    L.marker(dublin, {
      icon: L.divIcon({ className: 'hub-marker' }),
      title: 'Dublin (Hub)'
    }).addTo(map).bindPopup('Dublin (Hub)');

    // Destination markers and routes
    destinations.forEach(dest => {
      L.marker(dest.coords, {
        icon: L.divIcon({ className: 'airport-marker' }),
        title: dest.name
      }).addTo(map).bindPopup(dest.name);

      L.polyline([dublin, dest.coords], {
        color: 'red',
        weight: 2
      }).addTo(map);
    });
  </script>
</body>
</html>
